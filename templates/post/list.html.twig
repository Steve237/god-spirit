{% extends 'base.html.twig' %}

{% block title %}
	Articles
{% endblock %}

{% block body %}
    <section class="blog-wrap-layout18">
        <div class="container-fluid">
            {% if posts is not empty %}
                <div class="row gutters-40" id="no-equal-gallery">
                    {% for post in posts %}
                        <div class="col-xl-3 col-lg-4 col-md-6 col-12 no-equal-item">
                            <div class="blog-box-layout15">
                                <div class="item-img">
                                    <a href="{{path('show_post', {'slug' : post.slug})}}">
                                        <img src="{{post.coverPicture}}" alt="image">
                                    </a>
                                </div>
                                <div class="item-content">
                                    <ul class="entry-meta meta-color-dark">
                                        <li>
                                            <i class="fas fa-tag"></i>
                                            {{post.category.name}}
                                        </li>
                                        <li>
                                            <i class="fas fa-calendar-alt"></i>
                                            {{ post.createdAt | date('d-m-y') }}
                                        </li>
                                    </ul>
                                    <h3 class="item-title text-center">
                                        <a href="{{path('show_post', {'slug' : post.slug})}}">
                                            {{post.title}}
                                        </a>
                                    </h3>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
                <div class="loadmore-btn-layout2">
                    {{ knp_pagination_render(posts, 'pagination.html.twig') }}
                </div>
            {% else %}
                <h2 class="text-center">
                    Aucun article trouv√©
                </h2>
            {% endif %}
        </div>
    </section>
{% endblock %}